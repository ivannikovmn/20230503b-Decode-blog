                    <input type="text" value="<%=blog.title%>" placeholder="Введите имя" name="title"></fieldset>                  
                <fieldset  class="fieldset">
                    <button class="blue-button" type="submit">Сохранить</button>
                </fieldset>                
            </form>
        </div>
    </div>
    <%- include('partials/scripts.ejs')%>
