    <%- include('partials/header.ejs') %>
    <div class="container">
        <div class="main">
            <form action="/api/blogs/edit" method="POST" enctype="multipart/form-data" class="form">
                <h2>Редактировать пользователя</h2>
                <fieldset>
                    <input type="hidden" value="<%=blog._id%>" name="id">
                </fieldset>
