<html lang="en">
<head>
    <%- include('partials/head.ejs') %>
    <title>Document</title>
</head>
<body>
    <%- include('partials/header.ejs') %>
    <div class="container">
        <div class="main">
            <form action="/api/rate/edit" method="POST" class="form">
                <h2>Редактировать комментарий</h2>
                <fieldset>
                    <input type="hidden" value="<%=rate._id%>" name="id">
                </fieldset>                
                <fieldset class="fieldset">
                    <!-- blog.description -->
                    <textarea placeholder="Введите комментарий" name="text"><%=rate.text%></textarea>                    
                </fieldset>    
                <fieldset  class="fieldset">
                    <button class="blue-button" type="submit">Сохранить</button>
                </fieldset>                
            </form>
        </div>
    </div>
    <%- include('partials/scripts.ejs')%>
</body>
</html>